<div class="container">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-12 text-center">
        {{!-- <i class="fal fa-cheeseburger"></i> --}}
        <h1>Eat-Da-Burger</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="row justify-content-center">
          <div class="col-9">
            {{!-- New Burger --}}
            <ol>
              {{#each burgers}}
              <li class="list-group-item list-group-item-action ordered-list-item">
                {{name}}
                <button class='btn-small float-right devour' data-id="{{id}}">Devour!</button>
              </li>
              {{/each}}
            </ol>
          </div>
          <div class="col-3">
            {{!-- Devour Button --}}
          </div>
        </div>
      </div>
      <div class="col-6">
        {{!-- Devoured Burgers --}}
        <ol class="list-group">
          {{#each devoured}}
          <li class="list-group-item list-group-item-action disabled ordered-list-item" aria-disabled="true">
            {{name}}
          </li>
          {{/each}}
        </ol>

      </div>
    </div>
  </div>
  <div class="container mt-3">
    <div class="row justify-content-center">

      <textarea class="col-5" id="burger-textarea">
        {{!-- <textarea id="burger-textarea">
  
          </textarea> --}}
      </textarea>
    </div>
    <div class="row justify-content-center text-center">
      <div class="col-12 justify-content-center mt-3">
        <button class="btn-primary" id="submit-burger">Submit</button>
        <br />
        <p>Enter a burger you want to eat then click the Submit button.</p>
      </div>
    </div>


  </div>
</div>


